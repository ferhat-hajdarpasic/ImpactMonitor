<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:clickable="false"
    android:longClickable="false"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity"
    android:background="@drawable/brain"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/topAnchorTextViewtextView3"
        android:layout_alignParentBottom="false"
        android:layout_alignStart="@+id/btn_scan"
        android:layout_alignParentTop="true" />

    <ListView
        android:id="@+id/device_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:padding="3dp"
        android:layout_weight="0.32"
        android:layout_above="@+id/no_device"
        android:layout_below="@+id/topAnchorTextViewtextView3" />

    <TextView
        android:id="@+id/no_device"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/nodevice"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/status" />

    <TextView
        android:id="@+id/status"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_above="@+id/btn_scan" />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fadingEdge="vertical"
        android:gravity="center_horizontal|center"
        android:linksClickable="false"
        android:onClick="onBtnScan"
        android:padding="10dp"
        android:text="@string/button_scan"
        android:layout_weight="0.30"
        android:background="@drawable/scanbutton"
        android:layout_above="@+id/bottomAnchorTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/bottomAnchorTextView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>